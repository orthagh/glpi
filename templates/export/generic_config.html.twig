<div class="mb-2">
    <div class="form-label">{{ __("Tabs to display") }}</div>

    <div class="row flex-wrap">
    {% for key, label in tabs %}
        <span class="col-12 col-xl-6 mb-1">
            <label class="form-check form-switch">
                <input class="form-check-input" type="checkbox" checked="" name="tabs" value="{{ key }}">
                <span class="form-check-label">{{ label|raw }}</span>
            </label>
        </span>
    {% endfor %}
    </div>
</div>

<div class="modal-footer">
    <input type="hidden" name="no_html_header" value="1">
    <button class="btn btn-primary ms-auto" type="submit">
        <i class="ti ti-file-download"></i>
        <span>{{ _x('button', 'Generate') }}</span>
    </button>
</div>
